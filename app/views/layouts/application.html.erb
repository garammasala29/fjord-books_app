<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        【<strong><%= current_user.email %></strong>】
        <%= link_to Book.model_name.human, books_path %> |
        <%= link_to User.model_name.human, users_path %> |
        <%= link_to t('views.common.logout'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t('devise.registrations.new.sign_up'), new_user_registration_path %> |
        <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path %>
      <% end %>
    </header>
    <% if notice %>
      <p><%= notice %></p>
    <% end %>
    <% if alert %>
      <p><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
